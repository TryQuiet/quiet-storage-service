{
  "name": "quiet-storage-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TryQuiet/quiet-storage-service.git"
  },
  "main": "./dist/src/main.js",
  "bin": {
    "qss": "./dist/src/main.js"
  },
  "scripts": {
    "build": "nest build",
    "bundle": "esbuild dist/src/main.js --external:'@nestjs/microservices' --bundle --platform=node --format=cjs --outfile=bundle/bundle.cjs --allow-overwrite --main-fields=module,main",
    "build:bundle": "npm run build && npm run bundle",
    "format": "prettier \"src/**/*.ts\"",
    "format:fix": "prettier -w \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format:lint": "npm run format && npm run lint",
    "format:lint:fix": "npm run format:fix && npm run lint:fix",
    "start:dev": "dotenvx run -f .env.dev -- nest start --watch",
    "start:debug": "dotenvx run -f .env.dev -- nest start --debug --watch",
    "start:bundle:dev": "dotenvx run -f .env.dev -- node bundle/bundle.cjs",
    "start:bundle:prod": "dotenvx run -f .env.prod -- node bundle/bundle.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.36.0",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.4.15",
    "@nestjs/websockets": "^10.4.15",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^4.28.1",
    "luxon": "^3.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@fastify/static": "^7.0.0",
    "@fastify/view": "^8.0.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-config-love": "^118.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "volta": {
    "node": "22.11.0",
    "pnpm": "9.12.3"
  },
  "engines": {
    "node": "22.11.0",
    "npm": "9.12.3"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm run prettier",
      "pnpm run lint"
    ]
  }
}
